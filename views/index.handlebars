<div class="jumbotron">
	<img class="burgerlogo" src="/assets/img/burgers.jpg">
    <h1 class="text-center">Eat Da Burger</h1>
</div>

<div class="box">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Add a new burger</h2>
            <form class="add-form">
                <span class="form-group">
                    <label for="burger">Burger name</label>
                    <input type="text" id="burger" name="name">
                </span>
                <button id="addBurger" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
	<div class="col-md-5">
        <h1 class="text-center">Burgers to eat!</h1>
        <ul>
        	{{#each burgers}}
        	    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-5">
    	<h1 class="text-center">Devoured</h1>
    	{{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block}}
            {{/if}}
        {{/each}}
    </div>
</div>
